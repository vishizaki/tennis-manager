  <!-- Modal -->
  <div class="modal fade" id="myModal-<%= student.id %>" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Create a match with <%= student.first_name %></h4>
        </div>
        <div class="modal-body">

          <%= simple_form_for @match do |f| %>

            <%= f.input :opponent_id, :as => :hidden, :input_html => { :value => "#{student.id}" } %>
            <%= text_field_tag('date', Date.today, :required => true, class: "datetimepicker13" ) %>
        </div>
        <div class="modal-footer">
            <%= f.button :submit %>
          <% end %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>

</div>

<script type="text/javascript">
        $(function () {
            $('.datetimepicker13').datetimepicker({
                inline: true,
                sideBySide: true
            });
        });
</script>

